@page
@model TaskTracker.WebUI.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<h4>All items inside this context will be deleted as well.</h4>
<div>
    <h4>Context</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Context.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Context.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Context.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-selectedId="@Model.Context.Id">Back to List</a>
    </form>
</div>
